---
// HeaderSection.astro
---

<div class="container">
  <div class="overlay"></div>
  <div class="hero-1-container">
    <div class="hero-main-container">
      <picture>
        <source srcset="/Assets/img/hero-desktop.jpg" media="(min-width: 768px)">
        <img class="hero-main-image" draggable="false" src="/Assets/img/hero-mobile.avif" alt="Santiago Barbosa - Desarrollador Full Stack" loading="eager" fetchpriority="high" />
      </picture>
    </div>
    <div class="hero-text-logo-container">
      <div class="hero-text-logo"></div>
      <div>
        <h3 class="hero-text">
          Gracias <br />
          Por visitar <br />
          mi espacio creativo <br />
        </h3>
      </div>
    </div>
  </div>

  <!-- Header Section -->
  <header id="home">
    <div class="content container">
      <div class="text">
        <div class="parrafo-HELLO">
          <div class="letras">
            <p>&lt;</p>
            <p>H</p>
            <p>E</p>
            <p>L</p>
            <p>L</p>
            <p>O</p>
            <p> - </p>
            <p>W</p>
            <p>O</p>
            <p>R</p>
            <p>L</p>
            <p>D</p>
            <p>></p>
          </div>
        </div>
        <h1>
          <span class="letter">S</span><span class="letter">A</span><span class="letter">N</span><span class="letter">T</span><span class="letter">I</span><span class="letter">A</span><span class="letter">G</span><span class="letter">O</span><span class="letter-space"> </span><span class="letter">B</span><span class="letter">A</span><span class="letter">R</span><span class="letter">B</span><span class="letter">O</span><span class="letter">S</span><span class="letter">A</span>
        </h1>
        
        <!-- Social Icons -->
        <div class="flex gap-6 mt-6 items-center social-icons">
          <!-- LinkedIn -->
          <div class="relative group mx-2 flex flex-col items-center justify-center cursor-pointer transform transition-transform duration-300 ease-in-out hover:scale-110">
            <div class="absolute hidden group-hover:block bg-black/85 text-white text-lg font-medium py-0 px-2 rounded-xl shadow-lg -top-12 z-10 border-2 border-white">
              LinkedIn
              <span class="absolute left-1/2 bottom-[-6px] transform -translate-x-1/2 rotate-45 bg-black/80 w-3 h-3 border-2 border-white"></span>
            </div>
            <a class="in" target="_blank" href="https://www.linkedin.com/in/santiago-barbosa-903641209/" aria-label="Visitar perfil de LinkedIn">
              <span class="w-16 h-16 p-2 bg-black/60 hover:bg-blue-600 rounded-full shadow-xl flex items-center justify-center transition-all duration-300 ease-out">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" height="25" width="25" aria-hidden="true">
                  <path stroke="#fff" stroke-linejoin="round" d="M1.5 3.5a2 2 0 1 0 4 0 2 2 0 1 0 -4 0" stroke-width="1"></path>
                  <path stroke="#fff" stroke-linejoin="round" d="M1.5 22.5v-14h4v14h-4Z" clip-rule="evenodd" stroke-width="1"></path>
                  <path stroke="#fff" stroke-linejoin="round" d="M8 8.5v14h4v-6.908c0 -1.092 1 -3.092 3.895 -3.092 1.643 0 2.605 0.845 2.605 2.5v7.5h4V15c0 -1.309 -0.312 -2.937 -1.394 -4.277 -1.144 -1.417 -2.913 -2.223 -5.21 -2.223 -1.513 0 -2.835 0.615 -3.896 1.366V8.5H8Z" clip-rule="evenodd" stroke-width="1"></path>
                </svg>
              </span>
            </a>
          </div>

          <!-- GitHub -->
          <div class="relative group mx-2 flex flex-col items-center justify-center cursor-pointer transform transition-transform duration-300 ease-in-out hover:scale-110">
            <div class="absolute hidden group-hover:block bg-black/80 text-white text-lg font-medium py-0 px-2 rounded-xl shadow-lg -top-12 z-10 border-2 border-white">
              GitHub
              <span class="absolute left-1/2 bottom-[-6px] transform -translate-x-1/2 rotate-45 bg-black/80 w-3 h-3 border-2 border-white"></span>
            </div>
            <a class="git" target="_blank" href="https://github.com/BARBOSA191919" aria-label="Visitar perfil de GitHub">
              <span class="w-16 h-16 p-2 bg-black/60 hover:bg-gray-800 rounded-full shadow-xl flex items-center justify-center transition-all duration-300 ease-out">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" height="24" width="24" aria-hidden="true">
                  <path stroke="#fff" stroke-linecap="round" stroke-linejoin="round" d="M11.996 1.771a10.486 10.486 0 0 0 -3.314 20.438c0.523 0.092 0.69 -0.216 0.69 -0.493 0 -0.25 0.005 -0.945 0 -1.824 -2.919 0.633 -3.522 -1.381 -3.522 -1.381a2.775 2.775 0 0 0 -1.163 -1.534c-0.952 -0.65 0.071 -0.638 0.071 -0.638a2.201 2.201 0 0 1 1.607 1.08 2.232 2.232 0 0 0 3.05 0.871c0.05 -0.53 0.285 -1.025 0.666 -1.397 -2.328 -0.266 -4.776 -1.165 -4.776 -5.184a4.055 4.055 0 0 1 1.08 -2.815 3.762 3.762 0 0 1 0.103 -2.774s0.882 -0.282 2.883 1.076a9.924 9.924 0 0 1 5.252 0c2.007 -1.357 2.881 -1.076 2.881 -1.076 0.387 0.878 0.424 1.87 0.104 2.774a4.05 4.05 0 0 1 1.079 2.816c0 4.03 -2.452 4.916 -4.789 5.174a2.487 2.487 0 0 1 0.718 1.933v2.904c0 0.28 0.17 0.59 0.702 0.488a10.487 10.487 0 0 0 -3.322 -20.438v0Z" stroke-width="1"></path>
                </svg>
              </span>
            </a>
          </div>

          <!-- Instagram -->
          <div class="relative group mx-2 flex flex-col items-center justify-center cursor-pointer transform transition-transform duration-300 ease-in-out hover:scale-110">
            <div class="absolute hidden group-hover:block bg-black/80 text-white text-lg font-medium py-0 px-2 rounded-xl shadow-lg -top-12 z-10 border-2 border-white">
              Instagram
              <span class="absolute left-1/2 bottom-[-6px] transform -translate-x-1/2 rotate-45 bg-black/80 w-3 h-3 border-2 border-white"></span>
            </div>
            <a class="ig" target="_blank" href="https://www.instagram.com/sbarbosarivas/" aria-label="Visitar perfil de Instagram">
              <span class="w-16 h-16 p-2 bg-black/60 hover:bg-pink-600 rounded-full shadow-xl flex items-center justify-center transition-all duration-300 ease-out">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" height="24" width="24" aria-hidden="true">
                  <path stroke="#fff" stroke-linejoin="round" d="M18 6.5a0.5 0.5 0 0 1 0 -1" stroke-width="1"></path>
                  <path stroke="#fff" stroke-linejoin="round" d="M18 6.5a0.5 0.5 0 0 0 0 -1" stroke-width="1"></path>
                  <path stroke="#fff" stroke-linejoin="round" d="M7 12a5 5 0 1 0 10 0 5 5 0 1 0 -10 0" stroke-width="1"></path>
                  <path stroke="#fff" d="M16.5 1.5h-9a6 6 0 0 0 -6 6v9a6 6 0 0 0 6 6h9a6 6 0 0 0 6 -6v-9a6 6 0 0 0 -6 -6Z" stroke-width="1"></path>
                </svg>
              </span>
            </a>
          </div>

          <!-- Discord -->
          <div class="relative group mx-2 flex flex-col items-center justify-center cursor-pointer transform transition-transform duration-300 ease-in-out hover:scale-110">
            <div class="absolute hidden group-hover:block bg-black/80 text-white text-lg font-medium py-0 px-2 rounded-xl shadow-lg -top-12 z-10 border-2 border-white">
              Discord
              <span class="absolute left-1/2 bottom-[-6px] transform -translate-x-1/2 rotate-45 bg-black/80 w-3 h-3 border-2 border-white"></span>
            </div>
            <a class="discord" target="_blank" href="https://discord.gg/ChznPA5q" aria-label="Unirse al servidor de Discord">
              <span class="w-14 h-14 p-2 bg-black/75 hover:bg-[#8c9eff] rounded-full shadow-xl flex items-center justify-center">
                <svg class="w-6 h-6" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="#fff" viewBox="0 0 24 24">
